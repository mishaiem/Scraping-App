<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scrapping_app" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/linearGreen</item>
        <item name="colorPrimaryVariant">@color/linearGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="DialogAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>
    <style name="productBgColor">
        <item name="android:backgroundTint">#F1F1F1</item>
    </style>
    <style name="textColorLight">
        <item name="android:textColor">#616161</item>
    </style>

    <style name="EcommButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="iconColor">
        <item name="android:tint">#212121</item>
    </style>
    <style name="textColor">
        <item name="android:textColor">#212121</item>
    </style>
    <style name="EcommButtonSecondary">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">#E6F8EF</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/linearGreen</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="searchBg">
        <item name="android:backgroundTint">#EDEDED</item>
    </style>
    <style name="screenBg">
        <item name="android:background">#fff</item>
    </style>
    <style name="Head1">
